<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karthi.attendance.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:padding="5dp"
                android:layout_weight="0.5">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button1"
                        android:onClick="profile"
                        android:background="@drawable/profile"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:singleLine="false"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button2"
                        android:onClick="attendance"
                        android:background="@drawable/attendance"
                        android:text="Attendance"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button3"
                        android:onClick="analysis"
                        android:background="@drawable/analysis"
                        android:text="Analysis"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button4"
                        android:onClick="request"
                        android:background="@drawable/request"
                        android:text="Request"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button5"
                        android:onClick="notification"
                        android:background="@drawable/notification"
                        android:text="Announcement"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button6"
                        android:onClick="account"
                        android:background="@drawable/account"
                        android:text="Account"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/button7"
                        android:onClick="logout"
                        android:background="@drawable/logout"
                        android:text="LogOut"
                        android:textSize="16sp"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </TableRow>

        </TableLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
